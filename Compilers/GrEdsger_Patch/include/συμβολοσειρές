ακέραιος strlen (χαρακτήρας *s);
ακέραιος strcmp (χαρακτήρας *s1, χαρατήρας *s2);
κενό strcpy(χαρακτήρας *trg, χαρακτήρας *src);
κενό strcat(χαρακτήρας *trg, χαρακτήρας *src);

ακέραιος μήκοςΛέξης(χαρακτήρας *s){
	επέστρεψε strlen (s);
}

ακέραιος σύγκρισηΛέξεων(χαρατήρας *s1, χαρατήρας * s2){
	strcmp (s1,s2);
}

κενό αντιγραφήΛέξης(χαρατήρας *trg,χαρατήρας *src){
	strcpy(trg, src);

}

κενό ένωσηΛέξεων(χαρατήρας *trg,χαρατήρας *src){
	strcat(trg, src);
}
